{
  "kind": "collectionType",
  "collectionName": "drill_categories",
  "info": {
    "name": "Drill Category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "one_sentence_description": {
      "type": "string",
      "maxLength": 150,
      "required": true,
      "default": "No description"
    },
    "drills": {
      "collection": "drill",
      "via": "drill_category"
    }
  }
}
