{
  "kind": "collectionType",
  "collectionName": "article_categories",
  "info": {
    "name": "Article Category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true,
      "default": "A brief description of the article category."
    },
    "main_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "one_sentence_description": {
      "type": "string",
      "required": true,
      "maxLength": 150
    },
    "articles": {
      "via": "category",
      "collection": "article"
    }
  }
}
