{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "drills": {
      "via": "articles",
      "collection": "drill"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "sections.tags"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "main_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "description": {
      "type": "string",
      "required": true
    },
    "category": {
      "model": "article-categories"
    },
    "ropes_course_activities": {
      "via": "articles",
      "collection": "ropes-course-activity"
    }
  }
