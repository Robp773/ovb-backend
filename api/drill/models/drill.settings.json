{
  "kind": "collectionType",
  "collectionName": "drills",
  "info": {
    "name": "drill",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "articles": {
      "via": "drills",
      "collection": "article",
      "dominant": true
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "sections.tags"
    },
    "category": {
      "model": "drill-category"
    },
    "main_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "sections.steps"
    },
    "example_media": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "summary": {
      "type": "richtext"
    },
    "description": {
      "type": "string",
      "required": true
    },
    "isIndividual": {
      "type": "boolean",
      "default": false
    },
    "isGroup": {
      "type": "boolean",
      "default": false
    },
    "isTeam": {
      "type": "boolean",
      "default": false
    },
    "competency": {
      "type": "enumeration",
      "enum": [
        "Foundational",
        "Intermediate",
        "Advanced"
      ],
      "required": true,
      "default": "Foundational"
    },
    "time_estimate": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    }
  }
}
